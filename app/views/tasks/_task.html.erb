<tr id="task<%= task.id %>">
   <td><%= link_to task.title, task_path(task) %></td>
   <td><%= task.description %></td>
   <td>
     <% unless task.attachment_url.nil? %>
         <%= link_to File.basename(task.attachment_url), task.attachment_url %>
     <% end %>
   </td>
   <td><%= task.deadline %> </td>
   <td>
     <%= link_to 'Edit', edit_task_path(task), :class => 'btn btn-warning' %>
     <%= link_to 'Delete', task_path(task), confirm: 'Are you sure?', :method => :delete , :remote => true, :class => 'btn btn-danger' %>
     <%= if task.is_finished
                   link_to 'Not done yet', notdone_task_path(task), :remote => true, :method => :post, :class => 'btn'
                 else
                   link_to 'Done', done_task_path(task), :remote => true, :method => :post, :class => 'btn btn-success'
                 end
         %>

   </td>
 </tr>