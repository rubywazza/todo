<h1>Listing tasks</h1>

<h2>Stuff to do</h2>
<%=	 link_to "New task", new_task_path, :class => 'btn btn-primary' %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Attachment</th>
    <th>Deadline</th>
    <th>Actions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.title, task_path(task) %></td>
    <td><%= task.description %></td>
    <td>
      <% unless task.attachment_url.nil? %>
          <%= link_to File.basename(task.attachment_url), task.attachment_url %>
      <% end %>
    </td>
    <td><%= task.deadline %> <% if task.deadline.today? %> TODAY! <% end %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task_path(task), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path %>
